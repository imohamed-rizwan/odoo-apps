<odoo>
    <!--   Wizards View   -->
    <record id="report_wiz_view" model="ir.ui.view">
        <field name="name">Invoice Report Wizard </field>
        <field name="model">invoice.report.wiz</field>
        <field name="arch" type="xml">
            <form string="Invoice Report">
                <group>
                    <group>
                        <field name="start_date"/>
                    </group>
                    <group>
                        <field name="end_date"/>
                    </group>
                </group>
                <footer>
                    <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!--   Wizards Action   -->
    <record id="action_invoice_report_wizard" model="ir.actions.act_window">
        <field name="name">Invoice Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">invoice.report.wiz</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="report_wiz_view"/>
        <field name="target">new</field>
    </record>

    <menuitem name="Invoice Report" id="menu_invoice_report_wiz" parent="account.menu_finance_reports" action="action_invoice_report_wizard" sequence="2"/>


</odoo>